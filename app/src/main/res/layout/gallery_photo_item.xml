<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gallery_item_background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/selection_indicator"
        android:layout_width="@dimen/fragment_gallery_selection_indicator"
        android:layout_height="@dimen/fragment_gallery_selection_indicator"
        android:layout_gravity="top|end"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_number_0" />

</FrameLayout>